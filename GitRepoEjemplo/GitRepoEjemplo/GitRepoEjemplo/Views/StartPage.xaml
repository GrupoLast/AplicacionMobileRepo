<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GitRepoEjemplo.Views.StartPage">
    <Grid HorizontalOptions="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" FontAttributes="Bold" Margin="0, 60, 0, 0" FontSize="22" Text="Bienvenido a la aplicación Lastjosue"/>
        <StackLayout Grid.Row="1">
            <Frame Padding="0,4,0,4" HasShadow="True">
                <Button Background="black" VerticalOptions="Center" Text="Register" TextColor="White" CornerRadius="20"/>
            </Frame>
            <Frame Padding="0,4,0,4" HasShadow="True">
                <Button Background="black" Text="Do you have an account?" TextColor="White" CornerRadius="20"/>
            </Frame>
        </StackLayout>
        <Label VerticalOptions="End" Margin="0,0,0,20" HorizontalOptions="Center" Grid.Row="2" FontSize="15" Text="LastJosueApplication"/>
    </Grid>
</ContentPage>